<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LRADSAB01.Views.PageCreateAlumn">
    <ContentPage.Content>
        <StackLayout>

            <Image x:Name="foto" WidthRequest="50" HeightRequest="200" BackgroundColor="AliceBlue" />

            <Button x:Name="btnfoto" Text="Capturar imagen" Clicked="btnfoto_Clicked" />

            <Entry x:Name="Nombres" Placeholder="Ingrese su nombre" />

            <Entry x:Name="Apellidos" Placeholder="Ingrese su apellido" />

            <Entry x:Name="Edad" Placeholder="Ingrese su edad" Keyboard="Numeric" />

            <Entry x:Name="Telefono" Placeholder="Ingrese su telefono" Keyboard="Telephone" />

            <Entry x:Name="Direccion" Placeholder="Ingrese su Direccion" Keyboard="Text" />

            <Button  x:Name="btnproceso" Text="Guardar" Clicked="btnproceso_Clicked"  />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>